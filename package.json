{
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@stylistic/eslint-plugin": "^5.2.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-typescript": "^14.6.0",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.2",
    "npm-run-all2": "^8.0.4",
    "simple-git-hooks": "^2.13.0",
    "typescript": "~5.8.0"
  },
  "scripts": {
    "clean": "pnpm run -r clean",
    "dev": "pnpm run --filter ./packages/playground -r dev",
    "docs:dev": "pnpm run --filter ./packages/docs -r dev",
    "docs:build": "pnpm run --filter ./packages/docs -r build",
    "test:unit": "pnpm run --filter ./packages/zdmin-crab -r test:unit",
    "coverage": "pnpm run --filter ./packages/zdmin-crab -r coverage",
    "type-check": "run-p type-check:*",
    "type-check:packages": "pnpm run -r type-check",
    "type-check:self": "tsc",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:staged": "lint-staged",
    "build": "pnpm run -r build",
    "preinstall": "node scripts/preinstall.js",
    "postinstall": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec run-s type-check lint:staged"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": "eslint --fix"
  }
}
